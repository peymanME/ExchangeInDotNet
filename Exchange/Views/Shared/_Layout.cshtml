@using Exchange.Models.ViewModels.Base
@model ViewModelBase
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - Exchange Application</title>
        <script data-main="Scripts/app/main" src="~/Scripts/require.js"></script>


        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <nav id="Banner" class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            @Html.Partial("Menu/_LoginMenu", Model)
        </nav>
            <div class="container body-content">
                <div class="row" id="mainContent">
                    @RenderBody()
                </div>
                <footer>
                    <p>&copy; @DateTime.Now.Year - Exchange Application</p>
                </footer>
            </div>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
</body>
</html>
